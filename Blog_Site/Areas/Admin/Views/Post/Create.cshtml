@model CreatePostDTO
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row text-center ml-2 mt-2 mr-2">
        <div class="col-sm-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create Post</h3>
                </div>
                <form asp-area="Admin" asp-action="Create" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input class="form-control" placeholder="Title" asp-for="Title">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content"></label>
                            <input class="form-control" placeholder="Content" asp-for="Content">
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="List" class="btn btn-dark btn-sm mr-2 float-end">Back To List</a>
                        <input type="submit" class="btn btn-primary btn-sm float-end mr-2" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

